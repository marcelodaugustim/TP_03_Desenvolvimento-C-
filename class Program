using System;
using System.Collections.Generic;
using System.Diagnostics.Tracing;
using System.Linq;


namespace TP3_DesenvolvimentoC
{
    class Program
    {
        static void Main(string[] args)
        {

            List<Pessoa> listaAniversarios = new List<Pessoa>();  // Criação de lista do tipo Pessoa

            Console.WriteLine("Agenda de Aniversário");
            
            while (true)
            {

                Console.WriteLine("Menu:");

                Console.WriteLine(" 1 - Inserir");
                Console.WriteLine(" 2 - Pesquisar");
                Console.WriteLine(" 3 - Sair ");

                Console.Write("Digite a opção desejada: ");
                string opcaoEscolhida = Console.ReadLine();

                Console.WriteLine("*************************");

                if (opcaoEscolhida == "1")
                {
                    var aniversariante = new Pessoa();
                    aniversariante.CriarPessoa();                   // Chamando o método para criar uma pessoa
                    listaAniversarios.Add(aniversariante);         // Adicionar essa pessoa na lista criada
                }
              
               foreach (Pessoa pessoas in listaAniversarios)       
                {
                    Console.WriteLine(pessoas.Nome);               // Ao invés de aparecer o nome da pessoa, aparece o namespace do projeto
                }
            }
            if (opcaoEscolhida == "2")
            {
            var pessoa1 = new Pessoa();
            Console.WriteLine("Digite o nome da pessoa que você quer pesquisar:");
            string nome1 = Console.ReadLine();
            
            foreach (Pessoa p in listaAniversario)
            {
            if (pessoa1 == p)
              {
               p.CalcularQuantosDiasFaltam();
              }
            }
            
            if (opcaoEscolhida == "2")
            {
              break;
            }
            
            
        }

    }
}
